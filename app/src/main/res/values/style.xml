<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <style name="default_button_style">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/segoe_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/button_textSize_l</item>
        <item name="android:paddingStart">@dimen/button_icon_padding</item>
        <item name="android:paddingEnd">@dimen/button_icon_padding</item>
        <item name="android:background">@drawable/default_button</item>
    </style>

    <style name="hollow_button_style">
        <item name="android:fontFamily">@font/segoe</item>
        <item name="android:textSize">@dimen/button_textSize_s</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/hollow_button</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="text_box" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/button_padding_end</item>
        <item name="android:layout_marginStart">@dimen/button_padding_start</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="boxStrokeColor">@color/A300</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>


    <style name="text_field" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:includeFontPadding">false</item>

    </style>

    <style name="text_view" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/button_padding_end</item>
        <item name="android:layout_marginStart">@dimen/button_padding_start</item>
    </style>

    <style name="view_title" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/button_padding_start</item>
        <item name="android:layout_marginBottom">@dimen/button_padding_bottom</item>
        <item name="android:textSize">@dimen/view_title_size_big</item>
        <item name="android:fontFamily">@font/segoe_bold</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="error_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/failure_red</item>
        <item name="android:fontFamily">@font/segoe_bold</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="success_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/success_green</item>
        <item name="android:fontFamily">@font/segoe_bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="tweet_action_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_marginEnd">@dimen/margin_l</item>
    </style>

    <style name="count_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_s</item>
        <item name="android:fontFamily">@font/segoe</item>
        <item name="android:text">0</item>
    </style>

    <style name="profile_edit_textView_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_s</item>
        <item name="android:layout_marginTop">@dimen/margin_m</item>
        <item name="android:alpha">0.7</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>


    <style name="profile_edit_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_s</item>
        <item name="android:layout_marginTop">@dimen/margin_xl</item>
        <item name="android:layout_marginEnd">@dimen/margin_s</item>
    </style>

    <style name="profile_picture_style" >
        <item name="android:layout_width">@dimen/max_profile_picture_height</item>
        <item name="android:layout_height">@dimen/max_profile_picture_width</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CornerSize50Percent</item>
    </style>

    <style name="header_picture_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_picture_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="user_item_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_s</item>
        <item name="android:fontFamily">@font/segoe</item>

    </style>


</resources>